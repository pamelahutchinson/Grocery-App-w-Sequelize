<body>
 <div id="nav-bar">
    <a href="/">View all Shops</a>
</div>

<div id="body">
    <h1>Add NEW SHOP</h1>



    <form id="addNewBlog" action="/" method="POST">
        <input type="text" name="name" placeholder="Enter Shop Name"/>
        <input type="text" name="street" placeholder="Enter Street"/>
        <input type="text" name="city" placeholder="Enter City"/>
        <input type="text" name="state" placeholder="Enter State"/>

        <input id="postBtn" type="submit" value="Post"/>
    </form>
</div>
<div>
  <h1>Shops</h1>

  {{#shop}}

   <a href='/new-item/{{id}}'<h3>{{name}}</h3></a>
    <p>{{street}}, {{city}}, {{state}}</p>
    <form action="/delete-shop" method="POST">
    <input type="hidden" name="shopId" value="{{id}}"/>
    <input id="deleteBtn" type="submit" value="Remove" />
</form>
  {{/shop}}

</div>



</body>
</html>